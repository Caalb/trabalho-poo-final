@model Account;

<div class="text-center">
  <h1>Bem-vindo, @Model.Owner.FirstName @Model.Owner.LastName!</h1>
</div>

<div>
  <h3>O que deseja fazer hoje?</h3>
  <h5>Saldo: R$@Model.Balance,00</h5>
</div>

<div>
  <button>Depositar</button>
  <button>Sacar</button>
  <button>Ver extrato</button>
</div>

<div>
  <input type="button" id="DepositModal" value="Show Modal" data-toggle="modal"/>
</div>

<div id="depositModal" class="modal fade" data-url="@Url.Action("DepositModal")">
  <div id="modalContent"></div>
</div>


@section Scripts {
  <script>
    $(document).ready(function () {
      $("#DepositModal").click(function () {
        const url = $("#depositModal").data("url");
        $.ajax({
          type: "GET",
          url,
          success: function (data) {
            $("#modalContent").html(data);
            $("#depositModal").modal("show");
          }
        });
      });
    });
  </script>
}